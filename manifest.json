{
  "manifest_version": 3,
  "name": "Misinformation Detector",
  "version": "1.0",
  "description": "Scans webpages for misinformation and shows reliability score.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html"
},
"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]
}
